@page
@model Helsinki_City_Bike_App.Pages.Journeys.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Journey</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Departure Time:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Journey.DepartureTime)
        </dd>
        <dt class="col-sm-3">Return Time</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Journey.ReturnTime)
        </dd>
        <dt class="col-sm-3">Distance:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Journey.Distance)
        </dd>
        <dt class="col-sm-3">Duration:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Journey.Duration)
        </dd>
        <dt class="col-sm-3">Departure station:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Journey.DepartureStation.Name)
        </dd>
        <dt class="col-sm-3">>Return station:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Journey.ReturnStation.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Journey?.JourneyID" class="btn btn-primary">Edit</a>
    <a asp-page="./Delete" asp-route-id="@Model.Journey?.JourneyID" class="btn btn-danger">Delete</a>
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
